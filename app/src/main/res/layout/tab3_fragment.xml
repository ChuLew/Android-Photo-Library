<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/was"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="How To Page"
        android:layout_marginTop="40dp"
        android:textColor="#F00"
        android:id="@+id/textTab3"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTab3"
        android:layout_marginTop="-1dp"
        android:textColor="#FFD700"
        android:text="Home Page:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-21dp"
        android:textColor="#000"
        android:layout_toEndOf="@+id/textView"
        android:text="To create a new album, press the button on the bottm right of the screen " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-8dp"
        android:text="To open an Album, press on the album"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="3dp"
        android:textColor="#000"
        android:text="To Rename/Delete/Open an album, press and hold the Album you want to edit, a menu will open to Rename/Delete/Open Album" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="#000"
        android:text="Once the Album is Opened, tap a photo to open slideshow mode of the album" />
    <TextView
        android:id="@+id/textView9"
        android:textColor="#FFD700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:text="SlideShow:" />

    <TextView
        android:id="@+id/textView10"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-18dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="To Remove/Display/Move/Copy, press and hold the image you want to perform the action on" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="276dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="36dp"
        android:text="Swipe left or right to scroll through images" />

    <TextView
        android:id="@+id/textView12"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:text="The buttons on the bottom of the page allow the user to copy/move the image to another folder and also give them the option to change the tags"
        />
    <TextView
        android:id="@+id/textView13"
        android:textColor="#FFD700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView12"
        android:text="Edit Tag: " />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-21dp"
        android:layout_toEndOf="@+id/textView13"
        android:text="For this application, tags can only be of people or a person"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-1dp"
        android:text="Swipe a tag on the list of tags twice to remove the tag" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_marginStart="-69dp"
        android:layout_marginBottom="-68dp"
        android:text="Search: "
        android:textColor="#FFD700" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-113dp"

        android:text="On this page the user can choose to enter a person tag or a location tag and search the albums for any image that has either tags or both tags"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="-37dp"
        android:text="After pressing search, the images that are related to the search will appear in a thumbnail mode"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="-36dp"
        android:text="To edit a current tag, you can re-enter the same kind of tag to edit it"
        android:textColor="#000" />

</RelativeLayout>